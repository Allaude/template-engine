extends layouts/main-layout.pug

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://cdn.pixabay.com/photo/2017/01/06/17/49/honey-1958464_960_720.jpg", alt="honey")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very good honey for everyone in this world
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products